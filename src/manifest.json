{
  "manifest_version": 2,
  "name": "GPOscar",
  "description": "Chrome Extension which overlays average GPAs of teachers on Oscar",
  "version": "1.0",

  // "browser_action": {
  //   "default_icon": "icon.png",
  //   "default_popup": "popup.html"
  // },
  "permissions": [
    "activeTab",
    "https://critique.gatech.edu/course.php?id=*"
  ],
  "content_scripts": [
    {
      "matches": ["https://oscar.gatech.edu/pls/bprod/bwskfcls.P_GetCrse"],
      "js": ["lib/rmp-api-1.2.5.min.js", "showGPAs.js"]
    }
  ]
}